<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.d.tourguidebp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <!-- points Of Interest category -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/category_poi">

            <LinearLayout
                android:id="@+id/poi"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/poi_img"
                    style="@style/list_image"
                    android:src="@drawable/ic_place_white_48dp" />

                <TextView
                    android:id="@+id/poi_text"
                    style="@style/CategoryStyle"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/category_poi" />
            </LinearLayout>
        </FrameLayout>

        <!-- Restaurants category -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/category_restaurants">

            <LinearLayout
                android:id="@+id/restaurants"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/res_img"
                    style="@style/list_image"
                    android:src="@drawable/ic_restaurant_white_48dp" />

                <TextView
                    android:id="@+id/res_text"
                    style="@style/CategoryStyle"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/category_restaurants" />
            </LinearLayout>
        </FrameLayout>

        <!-- transport category -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/category_transport">

            <LinearLayout
                android:id="@+id/transport"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/tra_img"
                    style="@style/list_image"
                    android:src="@drawable/ic_directions_walk_white_48dp" />

                <TextView
                    android:id="@+id/tra_text"
                    style="@style/CategoryStyle"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/category_transport" />
            </LinearLayout>

        </FrameLayout>

        <!-- Phrases category -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/category_phrases">

            <LinearLayout
                android:id="@+id/phrases"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/phr_img"
                    style="@style/list_image"
                    android:src="@drawable/ic_question_answer_white_48dp" />

                <TextView
                    android:id="@+id/phr_text"
                    style="@style/CategoryStyle"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/category_phrases" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</ScrollView>